<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.inohomtask.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.inohomtask.ui.menu.MenuFragment"
        android:label="menuFragment"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menuFragment_to_controlListFragment"
            app:destination="@id/controlListFragment" />
    </fragment>

    <fragment
        android:id="@+id/controlListFragment"
        android:name="com.example.inohomtask.ui.control.ControlListFragment"
        android:label="ControlListFragment"
        tools:layout="@layout/fragment_control_list">
        <argument
            android:name="menu"
            app:argType="com.example.inohomtask.data.model.Menu" />
    </fragment>
</navigation>